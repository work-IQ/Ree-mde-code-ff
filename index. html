    <script>
        let clickCount = 0;
        const directLink = "https://www.effectivegatecpm.com/g4d5kg4qaf?key=406777624267375092c77834ed0b8246";

        function startConnect() {
            const id = document.getElementById('ffid').value;
            if (id.length < 5) {
                alert("Please enter a valid FF UID!");
                return;
            }

            document.getElementById('main-loader').style.display = 'block';
            document.getElementById('terminal-box').style.display = 'block';
            const terminal = document.getElementById('terminal-box');
            
            const logs = [
                "> Accessing Garena Server...",
                "> Encrypting User ID...",
                "> Bypassing Reward Firewall...",
                "> Searching available vouchers...",
                "> Connection Successful!"
            ];

            let i = 0;
            const interval = setInterval(() => {
                const p = document.createElement('div');
                p.innerText = logs[i];
                terminal.prepend(p);
                i++;
                if (i >= logs.length) {
                    clearInterval(interval);
                    setTimeout(() => {
                        document.getElementById('phase-connect').style.display = 'none';
                        document.getElementById('redeem-section').style.display = 'block';
                    }, 1000);
                }
            }, 1000);
        }

        function handleRedeemRedirect() {
            clickCount++;
            
            // Check current status
            if (clickCount === 1) {
                window.open(directLink, '_blank');
                document.getElementById('click-status').innerText = "Step: 2/2 - CLICK AGAIN";
            } else if (clickCount === 2) {
                window.open(directLink, '_blank');
                document.getElementById('click-status').innerText = "Step: VERIFYING...";
                setTimeout(() => {
                    document.getElementById('redeem-section').style.display = 'none';
                    document.getElementById('codes-container').style.display = 'block';
                }, 2000);
            }
        }

        // Home/Profile Alerts
        document.querySelectorAll('.nav-item').forEach((item, index) => {
            if(index !== 0) {
                item.addEventListener('click', () => {
                   // Functionality for navigation
                });
            }
        });
    </script>
